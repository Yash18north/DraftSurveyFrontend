{
    "breadcom": [
        {
            "title": "Item Listing",
            "redirect": "/ItemListing"
        },
        {
            "title": "Item Form",
            "redirect": "#"
        }
    ],
    "sections": [
        {
            "moduleType": "purchaseItems",
            "type": "purchase",
            "title": "Item Form",
            "customField": {
                "title": "Export Data",
                "buttons": {
                    "cancel": {
                        "title": "Cancel"
                    },
                    "confirm": {
                        "title": "Save"
                    }
                },
                "fields": [
                ]
            },
            "fields": [
                {
                    "width": 25,
                    "label": "Item Details",
                    "name": "section_heading",
                    "styleName": "section_heading",
                    "type": "label"
                },
                {
                    "name": "fk_category_id",
                    "label": "Select Category",
                    "width": 6,
                    "filterType": "category",
                    "type": "DropDownWithLoadMore",
                    "apiendpoint": "/category-master/list/",
                    "apimethod": "GET",
                    "isSearchable": "true",
                    "optionData": {
                        "id": "category_id",
                        "label": "category_name"
                    }
                },
                {
                    "width": 6,
                    "name": "item_rm_code",
                    "label": "Item Code",
                    "type": "text",
                    "required": true,
                    "pattern": "^[a-zA-Z0-9\\-]{1,20}$",
                    "placeholder": "Enter Item Code"
                },
                {
                    "width": 6,
                    "name": "item_description",
                    "label": "Description",
                    "type": "text",
                    "required": true,
                    "placeholder": "Enter Description"
                },
                {
                    "width": 6,
                    "name": "item_remark",
                    "label": "Remark",
                    "type": "text",
                    "placeholder": "Enter Remark"
                },
                {
                    "width": 6,
                    "name": "item_rate",
                    "label": "Item Rate",
                    "type": "number",
                    "pattern": "^[0-9]+(\\.[0-9]{1,2})?$",
                    "placeholder": "Enter Rate"
                },
                {
                    "width": 6,
                    "name": "item_uom",
                    "label": "Unit of Measure",
                    "type": "text",
                    "placeholder": "Enter UOM (e.g., kg)"
                },
                {
                    "width": 6,
                    "name": "item_make",
                    "label": "Make",
                    "type": "text",
                    "placeholder": "Enter Make"
                },
                {
                    "width": 6,
                    "name": "item_model",
                    "label": "Model",
                    "type": "text",
                    "placeholder": "Enter Model"
                },
                {
                    "width": 6,
                    "name": "item_manufacture_time",
                    "label": "Manufacturing",
                    "type": "text",
                    "placeholder": "Manufacturing",
                    "fieldWidth": "75",
                    "showTimeSelect": true,
                    "required":true
                },
                {
                    "width": 6,
                    "name": "item_services",
                    "label": "Services",
                    "type": "radio",
                    "options": [
                        "Calibration",
                        "AMC",
                        "Other Services"
                    ]
                }
            ]
        }
    ],
    "apiEndpoints": {
        "create": "/item-master/create/",
        "update": "/item-master/update/"
    },
    "actions": [
        {
            "label": "bi bi-eye h6",
            "value": "View",
            "type": "icon",
            "redirectUrl": "/itemListing/itemsForm/",
            "permission": "read"
        },
        {
            "label": "bi bi-pencil h6",
            "value": "Edit",
            "type": "icon",
            "redirectUrl": "/itemListing/itemsForm/:EditorId",
            "permission": "update"
        },
        {
            "label": "bi bi-trash h6",
            "value": "Delete",
            "type": "icon",
            "redirectUrl": "/itemListing/itemsForm/",
            "permission": "delete"
        },
        {
            "label": "bi bi-clock-history h6",
            "value": "History",
            "type": "icon",
            "permission": "history"
        }
    ],
    "popupMessages": {
        "download": {
            "headerMsg": "Confirmation!",
            "titleMsg": "Are you sure you want to download?"
        },
        "delete": {
            "headerMsg": "Confirmation!",
            "titleMsg": "Are you sure you want to delete?"
        },
        "post": {
            "headerMsg": "Confirmation!",
            "titleMsg": "Are you sure you want to post?"
        },
        "save": {
            "headerMsg": "Confirmation!",
            "titleMsg": "Are you sure you want to save?"
        },
        "cancel": {
            "headerMsg": "Confirmation!",
            "titleMsg": "Are you sure you want to cancel?"
        }
    }
}